html
  head
    link(link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css")
    style.
      th {
        text-align: center;
      }

      td {
        text-align: center;
        min-width: 100px;
      }
  body
    h1 Leaderboard
    table
      tr
        th Name
        th Count
        th Days
        th Average
        th Progress
        th Days Left
      each user in users
        tr
          td= user.name
          td= user.count
          td= user.days
          td= user.dailyAverage
          td= user.progress
          td= user.projectedDaysLeft
